---
import Layout from '@layouts/Layout.astro'
import { url } from '@data/seo.js'
import { Image } from 'astro:assets'
import logo from '@assets/logo.png'
---

<Layout
	title="Acasă"
	description="Bun venit pe site-ul oficial al Enciclopediei Ninjago. Aici veți găsi toate informațiile despre Ninjago. Plus episoade gratuite."
	seoImage="/images/seo/acasa.jpg"
	type="website"
	url={url}
>
	<header>
		<div class="overlay"/>
		<div class="content">
			<div class="logo-conntainer">
				<div class="logo-overlay"/>
				<Image src={logo} alt="Enciclopedia Ninjago" class="logo" />
			</div>
			<div class="desc">
				<p>
					Bun venit pe site-ul oficial al Enciclopediei Ninjago. Aici veți găsi toate informațiile despre Ninjago. Plus episoade gratuite.
				</p>
			</div>
		</div>
	</header>
</Layout>

<style>

	header {
		background-image: url('/images/hero.jpg');
		background-size: cover;
		background-position: center;
		height: 100vh;
		position: relative;
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		width: 100%;
		height: 100%;
		background: rgb(0,0,0);
		background: linear-gradient(360deg, rgba(0,0,0,1) 25%, rgba(0,0,0,.5) 50%, rgba(0,212,255,0) 100%);
	}

	.content {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		text-align: center;
	}

	.logo-conntainer {
		position: relative;
	}

	.logo-overlay {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		width: 100%;
		height: 100%;
		background: none;
	}

	.logo {
		width: 100%;
		max-width: 550px;
		height: auto;
		margin: 0 auto;
		display: block;
	}

	.desc {
		text-align: center;
		color: white;
		font-size: 1.7rem;
		margin-top: 20px;
	}

	.desc p {
		margin: 0;
	}

	@media (max-width: 768px) {

		.overlay {
			background: rgb(0,0,0);
			background: linear-gradient(360deg, rgba(0,0,0,1) 35%, rgba(0,0,0,.5) 75%, rgba(0,212,255,0) 100%);
		
		}

		.logo {
			max-width: 400px;
		}
		.desc {
			font-size: 1.5rem;
			max-width: 90%;
		}
	}
	
</style>