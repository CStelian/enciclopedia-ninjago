---
import { Image } from 'astro:assets'
import logo from '../assets/logo.png'
---

<nav>
    <div class="logo">
        <a href="/">
            <Image src={logo} alt="logo" />
        </a>
    </div>
    <ul>
        <li>
            <a href="/seriale">Seriale</a>
        </li>
    </ul>
    <button class="hamburger" id="hamburger-menu">
        <svg class="hamburger-icon" viewBox="0 0 100 80" width="40" height="40">
            <rect width="100" height="20"></rect>
            <rect y="30" width="100" height="20"></rect>
            <rect y="60" width="100" height="20"></rect>
        </svg>
        <svg viewBox="0 0 12 12" version="1.1"
            xmlns="http://www.w3.org/2000/svg" class="close-icon">
            <line x1="1" y1="11" 
                x2="11" y2="1" 
                stroke="white" 
                stroke-width="2"/>
            <line x1="1" y1="1" 
                x2="11" y2="11" 
                stroke="white" 
                stroke-width="2"/>
        </svg>
    </button>
</nav>

<style lang="scss">

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background-image: linear-gradient(to bottom, rgba(0,0,255,0.8), rgba(0,0,0,0));

        ul {
            display: flex;
            list-style: none;

            li {
                margin-left: 1rem;

                a {
                    text-decoration: none;
                    color: #fff;
                    font-weight: bold;
                    font-size: 1.2rem;
                    transition: all 0.3s ease-in-out;
                    padding: 0.5rem 1rem;
                    border-radius: 5px;

                    &:hover {
                        color: #00f;
                        background-color: #fff;
                    }
                }
            }
        }
    }

    .logo {
        width: 250px;

        img {
            width: 100%;
            height: auto;
        }
    }

    .hamburger {
        display: none;
        border: none;
        background-color: transparent;
        cursor: pointer;
        z-index: 100;
        position: relative;
        margin-right: 1rem;
        margin-bottom: 15%;


        svg {
            fill: #fff;
            width: 40px;
            height: 40px;
            transition: all 0.3s ease-in-out;
            position: absolute;
            top: 0;
            left: 0;
            right: 20px;
            bottom: 50px;
        }

        .close-icon {
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }
    }

    @media (max-width: 768px) {
        nav {
            justify-content: space-between;
            align-items: center;

            ul {
                flex-direction: column;
                margin-top: 1rem;
                position: absolute;
                background-color: #000;
                align-items: center;
                justify-content: center;
                top: 0px;
                left: 0;
                width: 100%;
                height: 100dvh;
                transform: translateX(-100%);
                transition: all 0.3s ease-in-out;
                z-index: 99;

                li {
                    margin-left: 0;
                    margin-bottom: 1rem;
                }
            }

            ul.active-nav {
                transform: translateX(0);
            }
        }

        .hamburger {
            display: flex;
            align-items: center;
            justify-content: center;

        }
    }

    .active-hamburger {
        .hamburger-icon {
            opacity: 0;
        }

        .close-icon {
            opacity: 1;
        }
    }
</style>

<script is:inline>
    const hamburger = document.getElementById('hamburger-menu')
    const nav = document.querySelector('ul')

    hamburger.addEventListener('click', () => {
        nav.classList.toggle('active-nav')
        hamburger.classList.toggle('active-hamburger')
    })

    window.addEventListener('resize', () => {
        if (window.innerWidth > 768) {
            nav.classList.remove('active-nav')
        }
    })

</script>